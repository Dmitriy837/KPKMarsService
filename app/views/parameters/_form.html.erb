<%= form_for([@user,@firm,@parameter]) do |f| %>
  <% if @parameter.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @parameter.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="control-group">
      <%= f.label :param_name, :class => 'control-label' %>
      <%= f.text_field :param_name, :class => 'text-field', :required => true, :title => "Parameter name can't be blank" %>
    </div>
    <div class="control-group">
      <%= f.label :param_value, :class => 'control-label' %>
      <%= f.text_field :param_value, :class => 'text-field', :required => true, :title => "Parameter value can't be blank" %>
    </div>
    <div class="form-actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>

