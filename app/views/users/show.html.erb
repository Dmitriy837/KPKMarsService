<h1>User <%= @user.id %></h1>
<table class="table table-striped">
  <tr><td>login:</td><td><%= @user.login %></td></tr>
  <% @firms = @user.firms %>
  <tr>
    <td>firms:</td>
    <td>
      <% @firms.each do |f|%>
        <%= link_to f.description, [@user,f] %> 
      <% end %>
    </td>
  </tr>
</table>

<%= link_to 'Back', root_url, :class => "btn btn-primary" %>
<%= link_to 'Edit', edit_user_path, :class => "btn btn-primary" %>
<% if admin? %>
  <%= link_to 'Add firm', new_user_firm_path(@user), :class => "btn btn-primary" %>
  <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?'}, :class => "btn btn-primary btn-danger" %>    
<% end %>