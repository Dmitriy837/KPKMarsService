<h1>Users</h1>
<table>
<% @users.each do |u| %>
  <tr>
    <td><%= u.id %></td>
    <td><%= link_to u.login, u %></td>
    <td><%= link_to 'Edit', edit_user_path(u), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Delete', u , confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<%= link_to "Add user" , new_user_path, :class => "btn btn-primary" %>
