<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="control-group">
      <%= f.label :login, :class => 'control-label' %>
        <div class="controls">
	      <%= f.text_field :login, :class => 'text-field', :required => true, :title => "Login can't be blank"  %>
        </div>
    </div>
  
    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <%= f.password_field :password, :class => 'text-field', :required => true, :title => "Password can't be blank"  %>
    </div>
    <% if !@user.new_record? %>
      <div class="control-group">
        <%= f.label :old_password, 'Your current password', :class => 'control-label' %>
        <%= f.password_field :old_password, :class => 'text-field', :required => true, :title => "Enter old user's password"  %>
      </div>
    <% end %>
    <div class="form-actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>

